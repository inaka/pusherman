{sys, [
       {lib_dirs, ["../deps", "../..", "." ]},
       {erts, [{mod_cond, derived}, {app_file, strip}]},
       {app_file, strip},
       {rel, "pusherman", "1",
        [
         kernel,
         stdlib,
         sasl,
         pusherman,
         compiler,
         syntax_tools,
         kernel,
         eper,
         lager,
         inets,
         crypto,
         ssl,
         public_key,
         apns,
         jsx,
         bcrypt,
         cowboy,
         ranch,
         erlstatsd,
         appmon,
         gs,
         %eleveldb,
         eunit
        ]},
       {rel, "start_clean", "",
        [
         kernel,
         stdlib
        ]},
       {boot_rel, "pusherman"},
       {profile, embedded},
       {incl_cond, exclude},
       {excl_archive_filters, [".*"]}, %% Do not archive built libs
       {excl_sys_filters, ["^bin/.*", "^erts.*/bin/(dialyzer|typer)",
                           "^erts.*/(doc|info|include|lib|man|src)"]},
       {excl_app_filters, ["\.gitignore"]},
       {app, sasl,   [{incl_cond, include}]},
       {app, stdlib, [{incl_cond, include}]},
       {app, kernel, [{incl_cond, include}]},
       {app, compiler, [{incl_cond, include}]},
       {app, appmon, [{incl_cond, include}]},
       {app, gs, [{incl_cond, include}]},
       {app, syntax_tools, [{incl_cond, include}]},
       {app, eper, [{incl_cond, include}]},
       {app, lager, [{incl_cond, include}]},
       {app, inets,  [{incl_cond, include}]},
       {app, crypto,  [{incl_cond, include}]},
       {app, ssl,  [{incl_cond, include}]},
       {app, goldrush,  [{incl_cond, include}]},
       {app, apns,  [{incl_cond, include}]},
       {app, jsx,  [{incl_cond, include}]},
       {app, public_key,  [{incl_cond, include}]},
       {app, bcrypt, [{incl_cond, include}]},
       {app, eunit, [{incl_cond, include}]},
       {app, cowboy, [{incl_cond, include}]},
       {app, ranch, [{incl_cond, include}]},
       {app, erlstatsd, [{incl_cond, include}]},
       %{app, eleveldb, [{incl_cond, include}]},
       {app, pusherman, [{incl_cond, include}]}
      ]}.

{target_dir, "pusherman"}.

{overlay, [
           {mkdir, "log/sasl"},
           {copy, "files/erl", "\{\{erts_vsn\}\}/bin/erl"},
           {copy, "files/nodetool", "\{\{erts_vsn\}\}/bin/nodetool"},
           {copy, "files/pusherman", "bin/pusherman"},
           {copy, "files/pusherman.cmd", "bin/pusherman.cmd"},
           {copy, "files/start_erl.cmd", "bin/start_erl.cmd"},
           {copy, "files/install_upgrade.escript", "bin/install_upgrade.escript"},
           {copy, "files/sys.config", "releases/\{\{rel_vsn\}\}/sys.config"},
           {copy, "files/vm.args", "releases/\{\{rel_vsn\}\}/vm.args"}
          ]}.
